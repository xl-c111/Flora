{
  "name": "flora-holberton-demo-project",
  "version": "1.0.0",
  "description": "Flora - Flowers and plants marketplace demo project",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "db:setup": "pnpm --filter backend db:setup",
    "db:seed": "pnpm --filter backend db:seed",
    "db:reset": "pnpm --filter backend db:reset",
    "start:db": "docker-compose up -d postgres",
    "stop:db": "docker-compose down",
    "install:all": "pnpm install",
    "docker:build": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml build",
    "docker:setup": "docker exec -it flora-backend pnpm db:setup",
    "docker:dev:build": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:dev:bg": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:seed": "docker exec -it flora-backend pnpm db:seed",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:stop": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart-frontend": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml restart frontend",
    "docker:restart-backend": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml restart backend",
    "docker:clean": "docker-compose down -v",
    "docker:clean-project": "docker-compose down --rmi all -v",
    "docker:windows": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml up -d",
    "docker:windows:build": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml up --build",
    "docker:windows:logs": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml logs -f",
    "docker:windows:stop": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml down",
    "docker:windows:restart-backend": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml restart backend",
    "docker:windows:restart-frontend": "docker-compose -f docker-compose.yml -f docker-compose.windows.yml restart frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "author": "Anthony, Bevan, Xiaoling, and Lily",
  "license": "MIT",
  "dependencies": {
    "@auth0/auth0-react": "^2.0.0",
    "jwks-rsa": "^3.0.1",
    "zod": "3.22.4"
  }
}

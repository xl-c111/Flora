{
  "name": "backend",
  "version": "1.0.0",
  "description": "Flora marketplace backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "prisma migrate deploy && prisma db seed && node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma migrate deploy && pnpm db:seed",
    "db:reset": "prisma migrate reset --force",
    "test": "jest",
    "test:mock": "USE_PRISMA_TEST_MOCK=true pnpm test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testPathPatterns=auth",
    "test:order": "jest --testPathPatterns=order",
    "test:payment": "jest --testPathPatterns=payment",
    "test:email": "jest --testPathPatterns=email",
    "test:ai": "jest --testPathPatterns=ai",
    "test:integration": "jest --testPathPatterns=integration",
    "test:live-email": "tsx src/test/test-get-live-email.ts",
    "get-token": "tsx src/test/test-get-token.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "jest": "^30.2.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  },
  "prisma": {
      "seed": "tsx prisma/seed.ts"
    },
  "author": "Anthony, Bevan, Xiaoling, and Lily",
  "license": "MIT"
}
